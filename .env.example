# GreenMotion Cars CRM Environment Variables
# Copy this file to .env and update with your values

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production

# Database Configuration
# For development (SQLite)
DATABASE_URL=sqlite:///greenmotion.db

# For production (PostgreSQL)
# DATABASE_URL=postgresql://username:password@localhost:5432/greenmotion

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@greenmotioncars.dk
ADMIN_EMAIL=admin@greenmotioncars.dk

# Redis Configuration (for caching and sessions)
# For development (optional - falls back to simple cache)
# REDIS_URL=redis://localhost:6379/0

# For production
# REDIS_URL=redis://username:password@localhost:6379/0

# Caching Configuration
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# Security Configuration (Production only)
# SESSION_COOKIE_SECURE=True
# SESSION_COOKIE_HTTPONLY=True
# SESSION_COOKIE_SAMESITE=Lax

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# External APIs (optional)
# SENTRY_DSN=your-sentry-dsn-here

# Celery Configuration (for background tasks)
# CELERY_BROKER_URL=redis://localhost:6379/1
# CELERY_RESULT_BACKEND=redis://localhost:6379/1

